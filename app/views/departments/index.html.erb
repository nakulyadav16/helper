<h4> All Department : </h4><br>

<% @departments.each do | department | %>
    <%= department.department_name %>
    <%= link_to "Edit", edit_department_path(department) %> 
    <%= link_to "Delete", department_path(department), method: :delete, data: { confirm: "Are you sure ? All User and thier activity will also be deleted. "} %><br>
<% end %>

<%= link_to "New Department", new_department_path , class:"btn btn-primary" %>